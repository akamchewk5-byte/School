  <script>
    // === CONFIG ===
    // Replace this with your actual Toyyibpay billcode
    const TOYYIBPAY_BILLCODE = "yurancustom"; // e.g. "yurancustom"
    const TOYYIBPAY_BASE_URL = "https://toyyibpay.com/";

    // Year in footer
    document.getElementById("year").textContent = new Date().getFullYear();

    const form = document.getElementById("payment-form");

    function setError(fieldWrapper, show) {
      if (!fieldWrapper) return;
      if (show) {
        fieldWrapper.classList.add("error");
        const err = fieldWrapper.querySelector(".error-text");
        if (err) err.style.display = "block";
      } else {
        fieldWrapper.classList.remove("error");
        const err = fieldWrapper.querySelector(".error-text");
        if (err) err.style.display = "none";
      }
    }

    form.addEventListener("submit", function (e) {
      e.preventDefault();

      // Basic validation
      let valid = true;

      const requiredIds = [
        "parentName",
        "phone",
        "studentName",
        "class",
        "feeType",
        "amount",
      ];

      requiredIds.forEach((id) => {
        const input = document.getElementById(id);
        const wrapper = input.closest(".field-group");
        let hasError = false;

        if (!input.value.trim()) {
          hasError = true;
        } else if (id === "amount") {
          const val = parseFloat(input.value);
          if (isNaN(val) || val < 1) {
            hasError = true;
          }
        }

        setError(wrapper, hasError);
        if (hasError) valid = false;
      });

      if (!valid) {
        window.scrollTo({ top: form.offsetTop - 80, behavior: "smooth" });
        return;
      }

      // Collect data (for logging / future use)
      const data = {
        parentName: document.getElementById("parentName").value.trim(),
        phone: document.getElementById("phone").value.trim(),
        email: document.getElementById("email").value.trim(),
        studentName: document.getElementById("studentName").value.trim(),
        className: document.getElementById("class").value.trim(),
        feeType: document.getElementById("feeType").value,
        month: document.getElementById("month").value,
        amount: document.getElementById("amount").value,
        channel: document.getElementById("channel").value,
      };

      // Optional: simple confirmation
      const summaryLines = [
        `Parent: ${data.parentName}`,
        `Student: ${data.studentName} (${data.className})`,
        `Fee Type: ${data.feeType}${data.month ? " â€“ " + data.month : ""}`,
        `Amount: RM ${parseFloat(data.amount).toFixed(2)}`,
      ];

      const confirmProceed = confirm(
        "Please confirm the payment details:\n\n" +
          summaryLines.join("\n") +
          "\n\nClick OK to proceed to Toyyibpay."
      );

      if (!confirmProceed) {
        return;
      }

      // Redirect to Toyyibpay bill page
      const paymentUrl = TOYYIBPAY_BASE_URL + TOYYIBPAY_BILLCODE;
      window.open(paymentUrl, "_blank");
    });
  </script>
